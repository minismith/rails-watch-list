<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dg6mudunt/image/upload/v1661522701/s6n27ucbv4uzxmtotxkd.jpg);">
  <div class="container">
    <h1 style="text-align: center">Your watch lists</h1>
  </div>
</div>

 <div class="container">

  <div class="cards">

    <% @lists.each do |list| %>
      <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.picture.key, :crop => :fill %>')">
        <%= link_to list.name, list_path(list), class: "white-link" %>
      </div>
    <% end %>


  </div>

  <div class="new-list-div">
    <%= link_to "Create a movie list",  new_list_path, class: "btn btn-outline-dark new-list-btn rounded"%>
  </div>

</div>
